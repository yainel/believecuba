{% extends "base.html.twig" %}

{% block header %}{% endblock %}
{% block plegable %}{% endblock %}
{% block mainmenu %}{% endblock %}
{% block message %}{% endblock %}

{% block content %}
    <section class="login p-fixed d-flex text-center bg-primary common-img-bg">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-12">
                    <div class="login-card card-block">
                        <form class="md-float-material" action="{{ path("fos_user_resetting_send_email") }}" method="post">
                            <div class="text-center">
                                <img src="{{ asset('bundles/app/images/logo-blue.png') }}">
                            </div>
                            <h3 class="txt-primary text-center m-b-25">Recuperar contraseña</h3>

                            <div class="md-group">
                                <div class="md-input-wrapper">
                                    <input type="text" class="md-form-control" autocomplete="off" id="username" name="username" required="required" />
                                    <label>Correo o usuario del sistema</label>
                                </div>
                            </div>
                            <div class="btn-forgot">
                                <button type="submit" class="btn btn-primary btn-md waves-effect waves-light text-center">Enviar correo de comprobación
                                </button>
                            </div>
                            <div class="row">
                                <div class="col-xs-12 text-center m-t-25">
                                    <a href="{{ path("fos_user_security_login") }}" class="f-w-600 p-l-5">Ir al formulario de entrada</a>
                                </div>
                            </div>
                            <!-- end of btn-forgot class-->
                        </form>
                        <!-- end of form -->
                    </div>
                    <!-- end of login-card -->
                </div>
                <!-- end of col-sm-12 -->
            </div>
            <!-- end of row -->
        </div>
        <!-- end of container-fluid -->
    </section>
{% endblock content %}

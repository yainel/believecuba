{% extends "base.html.twig" %}

{% block content %}
    <div class="row">
        {{ form_start(edit_form) }}
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-header-text">Editar Usuario</h5>
                    <p>Formulario de edición de usuarios</p>
                </div>
                <div class="card-block menu-snaps">
                    <div class="form-group">
                        <label class="form-control-label">Nombre completo</label>
                        {{ form_widget(edit_form.nombrecompleto, {'attr': {'class': 'form-control', 'placeholder': 'Nombre completo'}}) }}
                        <small class="form-text text-muted">Dejar este spam para mensajes de info/error.</small>
                    </div>
                    <div class="form-group">
                        <label class="form-control-label">Usuario</label>
                        {{ form_widget(edit_form.username, {'attr': {'class': 'form-control', 'placeholder': 'Usuario'}}) }}
                        <small class="form-text text-muted">Dejar este spam para mensajes de info/error.</small>
                    </div>
                    <div class="form-group">
                        <label class="form-control-label">Correo</label>
                        {{ form_widget(edit_form.email, {'attr': {'class': 'form-control', 'placeholder': 'Correo'}}) }}
                        <small class="form-text text-muted">Dejar este spam para mensajes de info/error.</small>
                    </div>
                    <div class="form-group">
                        <label class="form-control-label">Carné de identidad</label>
                        {{ form_widget(edit_form.carneidentidad, {'attr': {'class': 'form-control', 'placeholder': 'Carné de identidad'}}) }}
                        <small class="form-text text-muted">Dejar este spam para mensajes de info/error.</small>
                    </div>
                    <div class="form-group">
                        <label class="form-control-label">{{ form_widget(edit_form.enabled) }} Habilitado</label>
                        <small class="form-text text-muted">Dejar este spam para mensajes de info/error.</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-header-text"></h5>
                </div>
                <div class="card-block menu-snaps">
                    <label class="form-control-label">Grupos del sistema</label>
                    {% for group in edit_form.groups %}
                        <div class="form-check">
                            <label class="form-check-label">
                                {{ form_widget(group, {'attr': {'class': 'form-check-input'}}) }}
                                {{ group.vars.label }}
                            </label>
                        </div>
                    {% endfor %}

                    <button type="submit" class="btn btn-success waves-effect waves-light m-r-30">Editar usuario</button>
                    <button type="reset" class="btn btn-default waves-effect waves-light m-r-30">Cancelar</button>
                    <a class="btn btn-default waves-effect waves-light m-r-30" href="{{ path('usuario_index') }}">Volver al listado</a>
                </div>
            </div>
        </div>
        {{ form_end(edit_form) }}
    </div>
{% endblock content %}